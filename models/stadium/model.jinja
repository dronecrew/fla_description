{% set yard2m = 0.9144 %}
<?xml version="1.0" ?>
<sdf version="1.5">
    <model name="Stadium">
        <static>true</static>

        <link name="stadium">

            <collision name="collision">
                <geometry>
                    <plane>
                        <size>109.728  48.768</size>
                    </plane>
                </geometry>
            </collision>

            <visual name="visual">
                <cast_shadows>false</cast_shadows>
                <geometry>
                    <plane>
                        <size>109.728  48.768</size>
                    </plane>
                </geometry>
                <material>
                    <script>
                        <uri>model://stadium/materials/scripts</uri>
                        <uri>model://stadium/materials/textures</uri>
                        <name>vrc/grass</name>
                    </script>
                </material>
            </visual>

        </link>

        {% for i in range(-50, 55, 5): %}

        <link name="yard_line_{{ i }}">
            <pose>{{ i * yard2m }} 0 0.01 0 0 0</pose>

            <visual name="visual">
                <cast_shadows>false</cast_shadows>
                <geometry>
                    <plane>
                        <size>0.1 48.768</size>
                    </plane>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/White</name>
                    </script>
                </material>
            </visual>

        </link>

        {% endfor %}

        {% for i in range(-50, 51, 1): %}

        <link name="yard_tick_left_{{ i }}">
            <pose>{{ i * yard2m }} 8.12 0.1 0 0 0</pose>

            <visual name="visual">
                <cast_shadows>false</cast_shadows>
                <geometry>
                    <plane>
                        <size>0.05 1.0</size>
                    </plane>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/White</name>
                    </script>
                </material>
            </visual>

        </link>

        <link name="yard_tick_right_{{ i }}">
            <pose>{{ i * yard2m }} -8.12 0.1 0 0 0</pose>

            <visual name="visual">
                <cast_shadows>false</cast_shadows>
                <geometry>
                    <plane>
                        <size>0.05 1.0</size>
                    </plane>
                </geometry>
                <material>
                    <script>
                        <name>Gazebo/White</name>
                    </script>
                </material>
            </visual>

        </link>

        {% endfor %}

		{% for i in range(10, 60, 10): %}

		<link name="yard_top_right_{{ i }}">
			<pose>{{ (50 - i) * yard2m }} 20 0.1 0 0 3.14</pose>

			<visual name="visual">
				<cast_shadows>false</cast_shadows>
				<geometry>
					<plane>
						<size>2 2</size>
					</plane>
				</geometry>
				<material>
					<script>
						<uri>model://stadium/materials/scripts</uri>
						<uri>model://stadium/materials/textures</uri>
						<name>yard_{{ i }}</name>
					</script>
				</material>
			</visual>

		</link>

		<link name="yard_top_left_{{ i }}">
			<pose>{{ (50 - i) * yard2m }} -20 0.1 0 0 0</pose>

			<visual name="visual">
				<cast_shadows>false</cast_shadows>
				<geometry>
					<plane>
						<size>2 2</size>
					</plane>
				</geometry>
				<material>
					<script>
						<uri>model://stadium/materials/scripts</uri>
						<uri>model://stadium/materials/textures</uri>
						<name>yard_{{ i }}</name>
					</script>
				</material>
			</visual>
		</link>
		{% endfor %}

		{% for i in range(10, 50, 10): %}

		<link name="yard_bottom_right_{{ i }}">
			<pose>{{ -(50 - i) * yard2m }} 20 .1 0 0 3.14</pose>

			<visual name="visual">
				<cast_shadows>false</cast_shadows>
				<geometry>
					<plane>
						<size>2 2</size>
					</plane>
				</geometry>
				<material>
					<script>
						<uri>model://stadium/materials/scripts</uri>
						<uri>model://stadium/materials/textures</uri>
						<name>yard_{{ i }}</name>
					</script>
				</material>
			</visual>

		</link>

		<link name="yard_bottom_left_{{ i }}">
			<pose>{{ -(50 - i) * yard2m }} -20 0.1 0 0 0</pose>

			<visual name="visual">
				<cast_shadows>false</cast_shadows>
				<geometry>
					<plane>
						<size>2 2</size>
					</plane>
				</geometry>
				<material>
					<script>
						<uri>model://stadium/materials/scripts</uri>
						<uri>model://stadium/materials/textures</uri>
						<name>yard_{{ i }}</name>
					</script>
				</material>
			</visual>

		</link>
 
		{% endfor %}

    </model>
</sdf>

